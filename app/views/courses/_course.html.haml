.card.mt-2
  .card-header
    %h5     
      = link_to course.title, course_path(course)
  .card-body
    = course.description
  .card-footer
    .far.fa-clock
    = course.created_at.strftime('%d-%b-%Y')
    %br
    .fa-solid.fa-chalkboard-user
    = course.user
  .card-footer 
    = link_to 'Show', course
    \|
    = link_to 'Edit', edit_course_path(course)
    \|
    = link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }