.card.mt-2
  .card-header
    %h5     
      = link_to course.title, course_path(course)
  .card-body
    = course.description
  .card-footer
    .row
      .col-6
        .fa.fa-globe-africa
        = course.language
      .col-6
        .text-right
          .fa.fa-signal
          = course.level
  .card-footer
    = number_to_currency(course.price)  
  .card-footer
    .far.fa-clock
    = course.created_at.strftime('%d-%b-%Y')
    %br
    .fa-solid.fa-chalkboard-user
    = course.user.user_name
  .card-footer 
    = link_to 'Show', course
    \|
    = link_to 'Edit', edit_course_path(course)
    \|
    = link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }